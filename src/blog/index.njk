---
layout: layouts/base.njk
title: Blog
lang: en
---
<section class="page">
  <h1>Blog</h1>
  <div class="page-row">
    <p class="lead">Some thoughts.</p>
    <label class="lang-select" for="blog-lang">
      <span class="sr-only">Language</span>
      <select id="blog-lang" name="lang" onchange="window.location.href=this.value">
        <option value="/blog/" selected>En</option>
        <option value="/blog/tr/">Tr</option>
      </select>
    </label>
  </div>
</section>

<section class="posts">
  {% set posts = collections.post | byLang("en") | reverse %}
  {% if posts.length == 0 %}
    <p class="lead">No posts yet.</p>
  {% endif %}
  {% for post in posts %}
  <article class="post-card">
    <p class="post-date">{{ post.data.date | dateLocale("en") }}</p>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    {% if post.data.summary %}<p>{{ post.data.summary }}</p>{% endif %}
  </article>
  {% endfor %}
</section>
